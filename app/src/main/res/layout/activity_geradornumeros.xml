<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityGeradorNumeros">

    <EditText
        android:id="@+id/edQtndNum"
        android:layout_width="224dp"
        android:layout_height="68dp"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:hint="Até qual número vai gerar?"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Gerar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edQtndNum" />

    <TextView
        android:id="@+id/tvNumeros"
        android:layout_width="321dp"
        android:layout_height="341dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="126dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="200sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGerar" />
</androidx.constraintlayout.widget.ConstraintLayout>