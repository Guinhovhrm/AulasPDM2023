<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBath"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="28dp"
        android:text="Banheiro"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnOffice"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="56dp"
        android:text="EscritÃ³rio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRoom2"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:text="Quarto 2"
        app:layout_constraintBottom_toTopOf="@+id/btnOffice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRoom"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:text="Quarto"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCozinha"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:text="Cozinha"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSala"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:text="Sala"
        app:layout_constraintBottom_toTopOf="@+id/btnCozinha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="255dp"
        android:layout_height="121dp"
        android:text="Ache o dono da casa"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="170dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:text="Jardim"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="43dp" />

</androidx.constraintlayout.widget.ConstraintLayout>