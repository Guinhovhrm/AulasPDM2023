<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBath"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="28dp"
        android:text="Banheiro"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOffice"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="56dp"
        android:text="EscritÃ³rio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRoom2"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:text="Quarto 2"
        app:layout_constraintBottom_toTopOf="@+id/btnOffice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRoom"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:text="Quarto"
        app:layout_constraintBottom_toTopOf="@+id/btnRoom2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCalcSimples"
        android:layout_width="164dp"
        android:layout_height="68dp"
        android:layout_marginBottom="52dp"
        android:text="Calculadora Simples"
        app:layout_constraintBottom_toTopOf="@+id/btnBath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMemoria"
        android:layout_width="159dp"
        android:layout_height="68dp"
        android:text="Jogo da memoria"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcSimples"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:text="Menu de atividade"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="43dp" />

</androidx.constraintlayout.widget.ConstraintLayout>