<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGeradorRandom"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginBottom="16dp"
        android:text="Gerador de numeros"
        app:layout_constraintBottom_toTopOf="@+id/btnChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnChar"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginBottom="132dp"
        android:text="Gerador de numeros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConversor"
        android:layout_width="164dp"
        android:layout_height="69dp"
        android:layout_marginBottom="16dp"
        android:text="Dolar para Real"
        app:layout_constraintBottom_toTopOf="@+id/btnIMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIMC"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginBottom="16dp"
        android:text="Calcular IMC"
        app:layout_constraintBottom_toTopOf="@+id/btnGeradorRandom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMemoria"
        android:layout_width="164dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:text="Jogo da memoria"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcSimples"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnCalcSimples"
        android:layout_width="164dp"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp"
        android:text="Calculadora Simples"
        app:layout_constraintBottom_toTopOf="@+id/btnCalc2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCalc2"
        android:layout_width="164dp"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp"
        android:text="Calculadora 2 telas"
        app:layout_constraintBottom_toTopOf="@+id/btnConversor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:text="Menu de atividade"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>